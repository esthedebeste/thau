{
	"include": ["src"],
	"exclude": ["client"],
	"compilerOptions": {
		"target": "ES2019",
		"module": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"isolatedModules": true,
		"downlevelIteration": true,
		"noImplicitAny": false,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	}
}
