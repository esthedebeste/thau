{
	"name": "thau-monorepo",
	"author": "tbhmens",
	"private": true,
	"scripts": {
		"start": "node ./server",
		"dev": "tsm ./server/src/server.ts",
		"test": "tsm ./test/server/test.ts -- --dev",
		"test-remote": "tsm ./test/server/test_remote.ts",
		"build": "tsc -p ./server && tsc -p ./client",
		"heroku-postbuild": " npx -y --package=typescript@4.5.2 tsc -p ./client && npx -y --package=typescript@4.5.2 tsc -p ./server"
	},
	"devDependencies": {
		"@types/node": "^16.11.9",
		"@typescript-eslint/eslint-plugin": "^5.4.0",
		"@typescript-eslint/parser": "^5.4.0",
		"eslint": "^8.3.0",
		"eslint-config-prettier": "^8.3.0",
		"prettier": "^2.4.1",
		"tsm": "^2.1.4",
		"typescript": "^4.5.2"
	},
	"workspaces": [
		"server",
		"client",
		"test"
	],
	"engines": {
		"node": "^16.11.0"
	}
}
